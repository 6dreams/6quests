{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} — Список квестов
{% endblock %}

{% block body %}
    <h2>Квесты [<a href="{{ path('editor_main') }}">Управление</a>]</h2>
    {% for quest in quests %}
        <li>
            <a href="{{ path('quest_view', {'id' : quest.id}) }}">{{ quest.name }}</a>: {{ quest.stateName }} - {{ quest.date | date('d.m.Y') }}
        </li>
    {% else %}
        нет квестов
    {% endfor %}
{% endblock %}