{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ quest.name }}
{% endblock %}

{% block body %}
    <h2>{{ quest.name }}</h2>
    {% if quest.state == constant('SixQuests\\Domain\\Model\\Quest::STATE_UNKNOWN') %}
        <a href="{{ path('quest_start', { 'id' : quest.id }) }}">Начать квест</a>
    {% endif %}
{% endblock %}